<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SecureVaultApp">

    <Style x:Key="MainWindowTitleBarTextBlock" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
    </Style>

    <Style x:Key="AuthWindowInputBox" TargetType="Control">
        <Setter Property="Width" Value="300"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <Style BasedOn="{StaticResource AuthWindowInputBox}" TargetType="TextBox"/>
    <Style BasedOn="{StaticResource AuthWindowInputBox}" TargetType="PasswordBox"/>

    <Style x:Key="AuthWindowButton" TargetType="Button">
        <Setter Property="Width" Value="150"/>
        <Setter Property="Margin" Value="15"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

</ResourceDictionary>

<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="SecureVaultApp.Controls.VaultCredentialContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SecureVaultApp.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    mc:Ignorable="d">
    <StackPanel
        Margin="0,10,0,10"
        Orientation="Vertical"
        Spacing="10">
        <TextBox x:Name="_appName" PlaceholderText="Application name"/>
        <TextBox x:Name="_link" PlaceholderText="Domain link"/>
        <TextBox x:Name="_login" PlaceholderText="Login"/>
        <PasswordBox
            x:Name="_password"
            IsPasswordRevealButtonEnabled="True"
            PlaceholderText="Password"/>
    </StackPanel>
</ContentDialog>

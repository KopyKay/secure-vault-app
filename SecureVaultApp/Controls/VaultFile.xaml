<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="SecureVaultApp.Controls.VaultFile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SecureVaultApp.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Button
        Margin="0,5,0,0"
        HorizontalAlignment="Stretch"
        HorizontalContentAlignment="Stretch"
        Background="Transparent"
        BorderBrush="Transparent"
        CornerRadius="0">
        <Button.Flyout>
            <MenuFlyout>
                <MenuFlyoutItem Text="Download" Click="Download_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE896;"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Delete" Click="Delete_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE74D;"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </MenuFlyout>
        </Button.Flyout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Viewbox
                Grid.Column="0"
                Width="30"
                Height="30"
                Margin="0,0,10,0">
                <FontIcon Glyph="&#xE8A6;"/>
            </Viewbox>
            <StackPanel
                Grid.Column="1"
                Margin="0,0,20,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <TextBlock x:Name="_fileName" FontSize="14"/>
                <TextBlock x:Name="_fileSize" FontSize="10"/>
            </StackPanel>
            <TextBlock
                x:Name="_fileLastModification"
                Grid.Column="2"
                VerticalAlignment="Center"
                FontSize="12"/>
        </Grid>
    </Button>
</UserControl>
